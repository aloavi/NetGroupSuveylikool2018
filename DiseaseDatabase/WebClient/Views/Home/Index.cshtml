@model WebClient.ViewModels.HomeIndexViewModel

@{
    ViewData["Title"] = "Home Page";
}


<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-action="Upload">
            <div class="form-group">
                <div class="col-md-10">
                    <p>Upload a file using this form:</p>
                    <input type="file" name="file"/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Upload" />
                </div>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <h2>Top Diseases</h2>
        <ul>
            @foreach (var item in Model.TopDiseases)
            {
                <li>@Html.DisplayFor(modelItem => item.DiseaseName)</li>
            }
        </ul>
    </div>
    <div class="col-md-4">
        <h2>No. symptoms</h2>
        <ul>
            <li>@Html.DisplayFor(model => model.SymptomCount)</li>
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Top Symptoms</h2>
        <ul>
            @foreach (var item in Model.TopSymptoms)
            {
                <li>@Html.DisplayFor(modelItem => item.SymptomName)</li>
            }
        </ul>
    </div>
</div>
