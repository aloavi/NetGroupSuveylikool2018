@model IEnumerable<Domain.DiseaseSymptom>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Disease)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Symptom)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Disease.DiseaseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Symptom.SymptomName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DiseaseSymptomId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DiseaseSymptomId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DiseaseSymptomId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
